{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/news/tags", "dest": "api/news/tags.js" },
    { "src": "/api/news/([^/]+)", "dest": "api/news/$1.js" },
    { "src": "/api/news", "dest": "api/news.js" },
    { "src": "/(.*)", "dest": "index.js" }
  ]
}
